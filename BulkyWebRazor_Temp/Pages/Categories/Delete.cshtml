@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel
@{
}

<form method="post">
    <input asp-for="Category.Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label>Category Name</label>
            <input asp-for="Category.Name" disabled type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label>Display Order</label>
            <input asp-for="Category.DisplayOrder" disabled type="number" class="form-control" style="width:150px" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete Category</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" class="btn btn-outline-secondary form-control">Back</a>
            </div>
        </div>
    </div>
</form>